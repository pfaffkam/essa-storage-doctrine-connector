{
    "name": "pfaffkit/essa-storage-doctrine-connector",
    "description": "Doctrine connector for ESSA",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kamil Pfaff",
            "email": "kamil@pfaff.app"
        }
    ],
    "require": {
        "php": "^8.4",
        "doctrine/orm": "^2.10",
        "pfaffkit/essa": "*",
        "symfony/cache": "^7.3"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../core"
        }
    ],
    "autoload": {
        "psr-4": {
            "PfaffKIT\\Essa\\Adapters\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PfaffKIT\\Essa\\Adapters\\Storage\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "11.5",
        "ext-pdo_sqlite": "*"
    }
}
